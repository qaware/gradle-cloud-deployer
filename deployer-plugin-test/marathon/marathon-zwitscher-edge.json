{
  "id": "zwitscher-edge",
  "instances": 1,
  "cpus": 0.2,
  "mem": 512,
  "cmd": "/opt/java/latest/bin/java -Xmx256m -Dserver.port=$PORT0 -Deureka.instance.ipAddress=$HOST  -jar /opt/zwitscher-edge/zwitscher-edge.jar",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "qaware-oss-docker-registry.bintray.io/zwitscher/zwitscher-edge:1.0.1",
      "network": "BRIDGE",
      "portMappings": [
        {
          "hostPort": 0,
          "containerPort": 8765,
          "protocol": "tcp"
        }
      ]
    }
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/admin/health",
      "intervalSeconds": 10,
      "portIndex": 0,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "dependencies": [
    "zwitscher-config",
    "zwitscher-eureka"
  ],
  "env": {
    "eureka.host": "zwitscher-eureka.marathon.mesos"
  }
}